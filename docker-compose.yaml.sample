app:
  image: minhrau92/magento2-nginx:local
  container_name: container_name_variable
  links:
    - phpfpm
#    - db
  volumes_from:
    - appdata
  volumes:
    - ./nginx/logs:/var/log/nginx
    # - ./nginx/conf:/etc/nginx/conf.d/
  ports:
    - 8000:80

appdata:
  image: tianon/true
  volumes:
    - root_dir:/var/www/html
#    - ~/.composer:/var/www/.composer
#    - ./html/app/code:/var/www/html/app/code
#    - ./html/app/design:/var/www/html/app/design

phpfpm:
  image: minhrau92/magento2-php7:local
#  links:
#    - db
  volumes_from:
    - appdata
  environment:
      XDEBUG_CONFIG: remote_host=xdebug_remote_host
